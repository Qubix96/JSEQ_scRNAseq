#!/bin/bash

#python installation

function python {
 sudo apt-get update
 sudo apt install python3.8
 sudo apt install python3-pip
}


#r installation

function r_base {

sudo apt-get update
sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
sudo add-apt-repository 'deb [arch=amd64,i386] https://cran.rstudio.com/bin/linux/ubuntu xenial/'
sudo apt-get update
sudo apt-get install r-base
sudo apt-get upgrade
sudo apt-get install curl
sudo apt-get install openssl
sudo apt-get install libcurl4-openssl-dev
sudo apt-get install libhdf5-dev
sudo apt-get install libhdf5-serial-dev
sudo apt-get install h5utils
sudo apt-get install hdf5-tools
sudo apt-get install hdf5-helpers
sudo apt-get install -y r-cran-httr
sudo apt-get update

path=$(pwd)
Rscript $path/r_req.R

}


#java installation

function java {

sudo apt-get update
sudo apt install default-jdk

}

#SAMtools installation

function SAMtools {

sudo apt-get install -y samtools

}

#STAR installation

function STAR {

sudo apt-get update
        git clone https://github.com/alexdobin/STAR.git
        cd STAR/source
        make STAR
        cd ..
		sudo apt install rna-star
}


#Installation fastp

function fastp {

git clone https://github.com/OpenGene/fastp.git

cd fastp
make
sudo apt install fastp
cd ..
}

#download DropSeq scripts

function DropSeq {

wget -O DropSeq.zip https://github.com/broadinstitute/Drop-seq/releases/download/v2.4.0/Drop-seq_tools-2.4.0.zip
unzip DropSeq
rm -r DropSeq.zip

}

#download picard scripts

function picard {

git clone https://github.com/broadinstitute/picard.git
cd picard/
./gradlew shadowJar
cd ..
}


