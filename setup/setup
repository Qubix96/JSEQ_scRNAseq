#!/bin/bash

function permission {

echo ''
echo 'Write [sudo] to give installation permission'
echo ''

read permission_sudo

$permission 

}


#python installation

function python {
 apt-get update
 apt install python3.8
 apt install python3-pip
 pip3 install pysam==0.16.0.1
 pip3 install biopython==1.78
 pip3 install umi_tools==1.0.1
}


#r installation

function r_base {

#apt-get update
apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
add-apt-repository 'deb [arch=amd64,i386] https://cran.rstudio.com/bin/linux/ubuntu xenial/'
apt-get update
apt-get install r-base
apt-get upgrade
apt-get install curl
apt-get install openssl
apt-get install libcurl4-openssl-dev
apt-get install libhdf5-dev
apt-get install libhdf5-serial-dev
apt-get install h5utils
apt-get install hdf5-tools
apt-get install hdf5-helpers
apt-get install -y r-cran-httr
apt-get update

path=$(pwd)
Rscript $path/r_req.R

}


#java installation

function java {

#apt-get update
apt install default-jdk

}

#SAMtools installation

function SAMtools {

apt-get install -y samtools

}

#STAR installation

function STAR {

	#apt-get update
        git clone https://github.com/alexdobin/STAR.git
        cd STAR/source
        make STAR
        cd ..
		sudo apt install rna-star
}


#Installation fastp

function fastp {

git clone https://github.com/OpenGene/fastp.git

cd fastp
make
apt install fastp
cd ..
}

#download DropSeq scripts

function DropSeq {

wget -O DropSeq.zip https://github.com/broadinstitute/Drop-seq/releases/download/v2.4.0/Drop-seq_tools-2.4.0.zip
unzip DropSeq
rm -r DropSeq.zip

}

#download picard scripts

function picard {

git clone https://github.com/broadinstitute/picard.git
cd picard/
./gradlew shadowJar
cd ..

apt-get update
}


